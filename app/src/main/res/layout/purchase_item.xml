<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="390dp"
    android:layout_height="100dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <AbsoluteLayout
        android:id="@+id/item_root"
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:layout_gravity="center_horizontal"
        android:background="#f5f5f5"
        android:layout_height="80dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/item_image"></ImageView>

        <LinearLayout
            android:gravity="center"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_x="100dp">

            <TextView
                android:id="@+id/item_menuName"
                android:layout_width="wrap_content"
                android:text=""

                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16dp"

                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_y="10dp"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_x="270dp"

            >
            <TextView
                android:id="@+id/item_sideName"

                android:textAlignment="viewEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="9dp"/>
            <TextView
                android:id="@+id/item_drinkName"
                android:textAlignment="viewEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="9dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_x="340dp"
            >
            <TextView
                android:text="1"
                android:gravity="center"
                android:id="@+id/item_menuCount"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:textSize="14dp"/>
        </LinearLayout>
        <TextView
            android:textSize="21dp"
            android:id="@+id/purchasePrice"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_y="45dp"

            android:textAlignment="viewEnd"
            android:paddingRight="30dp"
            android:text="5000ì›" />

    </AbsoluteLayout>
</LinearLayout>