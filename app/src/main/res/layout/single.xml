<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"

        android:background="@color/yellow_500"
        android:paddingTop="7dp"
       android:textSize="20dp"

        android:text="토핑 선택"
         />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="50dp"
                >
                <TextView

                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:textSize="20dp"
                    android:text="양상추"
                    android:gravity="center"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/let"
                    android:layout_gravity="center"/>
                    <ImageView
                        android:id="@+id/noLettuce"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/unselect"
                        android:visibility="invisible"
                        android:layout_gravity="center"/>
                </FrameLayout>
                <Button
                    android:id="@+id/del1"
                    android:layout_marginLeft="100dp"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="제외"
                    app:cornerRadius="7dp"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:backgroundTint="#f5f5f5"

                    />
            </LinearLayout>




        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
            android:layout_marginBottom="50dp"
                    >
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:textSize="20dp"
                        android:text="양파"
                        android:gravity="center"/>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/whiteoni"
                            android:layout_gravity="center"/>
                        <ImageView
                            android:id="@+id/noOnion"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/unselect"
                            android:visibility="invisible"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                    <Button
                        android:layout_marginLeft="100dp"
                        android:id="@+id/del2"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="제외"
                        app:cornerRadius="7dp"
                        android:autoSizeTextType="uniform"
                        android:textStyle="bold"
                        android:backgroundTint="#f5f5f5"/>
                </LinearLayout>





        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"

                        >
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="60dp"
                            android:textSize="20dp"
                            android:text="피클"
                            android:gravity="center"/>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/pic"
                                android:layout_gravity="center"/>
                            <ImageView
                                android:id="@+id/noPickle"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/unselect"
                                android:visibility="invisible"
                                android:layout_gravity="center"/>
                        </FrameLayout>
                        <Button
                            android:id="@+id/del3"
                            android:layout_marginLeft="100dp"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            app:cornerRadius="7dp"
                            android:text="제외"
                            android:autoSizeTextType="uniform"
                            android:textStyle="bold"
                            android:backgroundTint="#f5f5f5"/>
                    </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/backButton2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:backgroundTint="#bdbdbd"
            android:layout_marginRight="50dp"
            app:cornerRadius="10dp"
            android:text="뒤로"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"

            />
        <Button
            android:id="@+id/okButton2"
            android:layout_width="100dp"
            app:cornerRadius="10dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/deepOrange_700"
            android:text="담기"
            android:textColor="@color/white"
            android:textSize="20dp"
            />
    </LinearLayout>




</LinearLayout>