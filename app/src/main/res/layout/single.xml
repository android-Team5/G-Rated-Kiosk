<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:autoSizeTextType="uniform"
        android:background="#dee2e6"
        android:textAlignment="center"
        android:text="토핑 추가 및 제거"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="60dp"
                    android:autoSizeTextType="uniform"
                    android:text="양상추"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/lettuce"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <Button
                android:id="@+id/del1"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="제외"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"
                android:backgroundTint="#B5B3B3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="85dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:autoSizeTextType="uniform"
                        android:text="양파"
                        android:gravity="center"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/onion"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <Button
                    android:id="@+id/del2"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="제외"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:backgroundTint="#B5B3B3"/>

            </LinearLayout>

        <LinearLayout
                android:layout_marginBottom="35dp"
                android:layout_marginTop="85dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="60dp"
                            android:autoSizeTextType="uniform"
                            android:text="피클"
                            android:gravity="center"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/pickles"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/del3"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="제외"
                        android:autoSizeTextType="uniform"
                        android:textStyle="bold"
                        android:backgroundTint="#B5B3B3"/>

                </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/backButton2"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:backgroundTint="#5C5757"
            android:text="뒤로"
            android:textSize="50dp"
            android:layout_weight="5"

            />
        <Button
            android:id="@+id/okButton2"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:backgroundTint="#FF0000"
            android:text="확인"
            android:textSize="50dp"
            android:layout_weight="5"
            />
    </LinearLayout>




</LinearLayout>