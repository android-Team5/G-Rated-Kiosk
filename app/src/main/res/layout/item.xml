<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_root"
    android:orientation="horizontal"
    android:layout_width="390dp"
    android:layout_gravity="center_horizontal"
    android:background="#f5f5f5"
    android:layout_marginBottom="4dp"
    android:layout_height="40dp">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/item_image"></ImageView>
    <TextView
        android:id="@+id/item_menuName"
        android:layout_width="95dp"

    android:layout_height="wrap_content"
    android:textStyle="bold"
        android:textAlignment="center"
        android:layout_x="60dp"
       android:layout_y="13dp"

    android:textSize="10dp"/>
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_x="170dp"

        >
    <TextView
        android:id="@+id/item_sideName"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="9dp"/>
    <TextView
        android:id="@+id/item_drinkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="9dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_x="250dp"
       >
        <TextView
            android:id="@+id/item_noLettuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="양배추"
            android:textSize="8dp"/>
        <TextView
            android:id="@+id/item_noOnion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="양파"
            android:textSize="8dp"/>
        <TextView
            android:id="@+id/item_noPickle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피클"

            android:textSize="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_x="290dp"
        >
    <Button

        android:gravity="center"
        android:id="@+id/item_sub"
        android:padding="0dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="-"
        android:textSize="16dp"
        android:layout_width="30dp"
        android:layout_height="40dp"
        />
    <TextView
        android:gravity="center"
        android:id="@+id/item_menuCount"
        android:layout_width="30dp"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:textSize="16dp"/>
    <Button

        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/item_add"
        android:text="+"
        android:padding="0dp"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_width="30dp"
        android:layout_height="40dp"
        />
    </LinearLayout>

</AbsoluteLayout>