<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#DADADA"
    android:layout_marginBottom="4dp"
    android:layout_height="50dp">
    <TextView
        android:id="@+id/item_menuName"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
        android:textAlignment="center"
        android:layout_x="20dp"
       android:layout_y="16dp"

    android:textSize="12dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_x="150dp"

        >
    <TextView
        android:id="@+id/item_sideName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="10dp"/>
    <TextView
        android:id="@+id/item_drinkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_x="240dp"
       >
        <TextView
            android:id="@+id/item_noLettuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="8dp"/>
        <TextView
            android:id="@+id/item_noOnion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="8dp"/>
        <TextView
            android:id="@+id/item_noPickle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_x="300dp"
        >
    <Button
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:id="@+id/item_sub"
        android:padding="0dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="-"
        android:textSize="16dp"
        android:layout_width="30dp"
        android:layout_height="40dp"
        />
    <TextView
        android:gravity="center"
        android:id="@+id/item_menuCount"
        android:layout_width="30dp"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:textSize="16dp"/>
    <Button
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/item_add"
        android:text="+"
        android:padding="0dp"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_width="30dp"
        android:layout_height="40dp"
        />
    </LinearLayout>

</AbsoluteLayout>