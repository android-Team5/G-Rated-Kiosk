<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="110dp"
    android:gravity="center"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:id="@+id/menuRoot"
            android:layout_width="match_parent"
            android:background="@drawable/roundrect"
            android:elevation="5dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/menuName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="싸이버거"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="10dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/menuImage"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.3" />

                <TextView
                    android:id="@+id/menuPrice"
                    android:layout_width="90dp"
                    android:layout_height="27dp"
                    android:layout_rowWeight="1"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@id/menuImage"
                    android:text="단품 : 5600원\n세트 : 7100원"
                    android:textAlignment="center"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/menuImage"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/menuName"
                    app:layout_constraintVertical_bias="0.5" />

                <ImageView
                    android:id="@+id/menuImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/psyburger"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
